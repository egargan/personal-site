{
  "extends": "astro/tsconfigs/strict",
  "include": [
    "src/**/*",
    "content/**/*"
  ],
  "compilerOptions": {
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "$lib/*": [
        "src/lib/*"
      ],
      "$constants/*": [
        "src/constants/*"
      ],
      "$components/*": [
        "src/lib/components/*"
      ],
      "$context/*": [
        "src/context/*"
      ],
      "$layouts/*": [
        "src/layouts/*"
      ],
      "$labs/*": [
        "src/labs/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  }
}
