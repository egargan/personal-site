<div class="feature feature-pad">
  <picture class="light">
    <source
      srcset="/posts/svelte-d3/tween-data-landscape-light.svg"
      media="(min-width: 760px)"
    />
    <source srcset="/posts/svelte-d3/tween-data-portrait-light.svg" />
    <img
      src="/posts/svelte-d3/tween-data-portrait-light.svg"
      alt="a diagram showing the intermediate datasets generated by Svelte's tween feature"
    />
  </picture>

  <picture class="dark">
    <source
      srcset="/posts/svelte-d3/tween-data-landscape-dark.svg"
      media="(min-width: 760px)"
    />
    <source srcset="/posts/svelte-d3/tween-data-portrait-dark.svg" />
    <img
      alt="a diagram showing the intermediate datasets generated by Svelte's tween feature"
      src="/posts/svelte-d3/tween-data-portrait-dark.svg"
    />
  </picture>
</div>

<style>
  div {
    padding-top: 12px;
    padding-bottom: 18px;
  }

  @media (max-width: 760px) {
    picture,
    img {
      place-self: center;
      max-width: 550px;
    }
  }

  html[data-theme="dark"] {
    picture.light {
      display: none;
    }
  }

  html:not([data-theme="dark"]) {
    picture.dark {
      display: none;
    }
  }
</style>
