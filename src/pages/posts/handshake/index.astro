---
import Header from "$lib/components/labs/Header.astro";
import GithubLink from "$lib/components/GithubLink.astro";
import Layout from "$layouts/Lab.astro";
import Lab from "./_Lab.svelte";
import { getEntry } from "astro:content";

const lab = await getEntry("labs", "handshake");

if (!lab) {
  return Astro.redirect("/404");
}
---

<Layout {lab}>
  <Header {lab}>
    <p>
      An interactive authentication method using secret handshakes as
      passphrases, built with <a href="https://brm.io/matter-js/">Matter.js</a>.
    </p>
    <GithubLink
      link="https://github.com/egargan/handshake"
      text="egargan/handshake"
    />
  </Header>
  <Lab client:only />
</Layout>
