---
import { formatDateLong } from "$lib/utils/time";
import type { CollectionEntry } from "astro:content";

const { post, bigHeader, i } = Astro.props as {
  post: CollectionEntry<"blog">;
  bigHeader?: boolean;
  i: number;
};
---

<article style={{ "--fly-in-delay": `${30 * (i + 1)}ms` }} class="fly-in">
  <a class="ignore-link-style" href={`/blog/${post.id}`}>
    <div class="title-row">
      <h2>{post.data.title}</h2>
      <span class="blog-chip">Blog</span>
    </div>
    <p>{post.data.intro}</p>
    <p class="metadata">
      <span class="date">{formatDateLong(new Date(post.data.created))}</span>
      <span>Â·</span>
      <span>{post.data.readTimeMins} minute read</span>
    </p>
  </a>
</article>

<style define:vars={{ "header-size": bigHeader ? "22px" : "18px" }}>
  article {
    margin-bottom: 40px;
  }

  .title-row {
    display: inline-flex;
    align-items: center;
    gap: 10px;

    margin-bottom: 6px;
  }

  h2 {
    font-size: var(--header-size);
    line-height: 32px;
    font-weight: 500;

    text-decoration: none;
    text-decoration-color: transparent;
    text-decoration-skip-ink: none;
    text-decoration-thickness: 0;
    text-underline-offset: 1px;

    transition-duration: 50ms;
    transition: text-decoration-color var(--transition-blink);
  }

  .blog-chip {
    font-family: "Atkinson Hyperlegible Mono";
    font-size: 16px;
    line-height: 1.1em;

    background-color: hsl(162deg 73 34);
    color: white;

    padding-bottom: 2px;
    padding-left: 4px;
    padding-right: 4px;
    padding-top: 2px;

    border-radius: 3px;
  }

  a:hover h2 {
    text-decoration: underline;
    text-decoration-color: var(--blue);
    text-decoration-thickness: 2px;
  }

  p {
    margin-bottom: 12px;
  }

  p.metadata {
    color: var(--text-two);
  }

  p.metadata > span {
    display: inline-block;
  }

  p.metadata > span:not(:last-child) {
    margin-right: 8px;
  }
</style>
