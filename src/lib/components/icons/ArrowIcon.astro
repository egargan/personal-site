---
const { points, width, color } = {
  width: 1.5,
  points: "left",
  color: "var(--blue)",
  ...Astro.props,
} as {
  class?: string;
  points: "left" | "right" | "up" | "down";
  width: number;
  color: string;
};
---

<svg
  width="24px"
  height="24px"
  stroke-width={width}
  viewBox="0 0 24 24"
  xmlns="http://www.w3.org/2000/svg"
  stroke={color}
  data-points={points}
>
  <path
    d="M18.5 12H6m0 0l6-6m-6 6l6 6"
    stroke-width={width}
    stroke-linecap="round"
    stroke-linejoin="round"
  >
  </path>

  <style>
    svg {
      transform: rotate(0deg);
    }

    svg[data-points="right"] {
      transform: rotate(180deg);
    }

    svg[data-points="up"] {
      transform: rotate(90deg);
    }

    svg[data-points="down"] {
      transform: rotate(-90deg);
    }
  </style>
</svg>
