---
const {
  openInSameTab,
  href,
} = {
  ...Astro.props,
  openInSameTab: false,
} as {
  openInSameTab: boolean;
  href: string;
}
---

{openInSameTab ? (
  <a class="text-red underline" {href}>
    <slot />
  </a>
) : (
  <a class="text-red underline" target="_blank" rel="noreferrer" {href}>
    <slot />
  </a>
)}
