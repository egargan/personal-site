---
import NavScribble from "./NavScribble.astro";

const { text, path, isCurrentPage } = Astro.props as {
  text: string;
  path: string;
  isCurrentPage: boolean;
};
---

<a
  class:list={[{ "is-selected": isCurrentPage }]}
  href={path}>
  {text}
</a>
{
  isCurrentPage && (
    <div class="flex justify-center">
      <NavScribble scale={1.8} />
    </div>
  )
}

<style>
  a {
    text-decoration-line: none;
  }

  a.is-selected {
    color: var(--red);
  }

  div {
    display: flex;
    justify-content: center;
  }
</style>
